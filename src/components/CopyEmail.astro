<li 
  class="cursor-pointer hover:underline" title="ryandotfurrer@gmail.com"
  id='copy-email-list-item'
  >
  Email Me
</li>

<script>
  const emailCopy= document.getElementById('copy-email-list-item');

  emailCopy?.addEventListener('click', (e) => {

  navigator.clipboard
    .writeText(e.target.getAttribute("title"))
    .then(() => {
      alert("Email copied: ryandotfurrer@gmail.com");
    })
    .catch((err) => {
      console.log(`Failed to copy: ${err}`);
    });
  })
</script>